extends layout

block content
  include includes/_header
  div.user-content

  script(id="chatTemplate", type="text/x-handlebars-template").
    <div class="groups-list drop-shadow round-corner">
      <form id="new-group-form" class="form" method="POST" action="/users/{{user.username}}/groups", autocomplete="off">
        <div class="form__control">
          <input id="group_name" name="group_name" type="text" placeholder="New group"/>
          <button id="submit-button" type="submit">
            <i class="fa fa-plus"></i>
          </button>
        </div>
        <div class="clear"></div>
      </form>

      {{#each this}}
        <div id="group-tab-{{_id}}" class="group">
          <div class="group__name" data-groupid="{{_id}}">
            {{group_name}}
          </div>
          <div class="group__list">
            {{#each users}}
              <!-- - var acronym = user.fullname.match(/\b(\w)/g).join('')
              - var char = acronym.charAt(0).toLowerCase()
              div(class="member #{char}")
                = acronym -->
              <img src="{{avatar}}" class="member-avatar" title="{{fullname}}"/>
            {{/each}}
          </div>
          <div class="clear"></div>
        </div>
      {{/each}}
    </div>

    <div id="chat-windows-container">
      {{#unless this.length}}
        <div class="guide-dialog-box">
          Welcome to Join! Lets start by create some groups and invite your friend.
        </div>
      {{/unless}}
    </div>

  script(id="chatWindowTemplate", type="text/x-handlebars-template").
    <div id="group-{{id}}" class="chat-window drop-shadow round-corner zoom-in">
      <div class="chat-window__helper">
        <div class="helper--title">
          {{name}}
        </div>
        <div class="helper--close-button">
          <i class="fa fa-times"></i>
        </div>
        <div class="helper--buzz">
          <i class="fa fa-bell"></i>
        </div>
        <div class="helper--share">
          <i class="fa fa-picture-o"></i>
        </div>
      </div>

      <div class="chat-window__room"></div>

      <div class="chat-window__type">
        <form class="chat-form" data-groupid="{{id}}" method="POST" autocomplete="off">
          <div class="form__control">
            <button class="chat-submit-button" type="submit">
              <i class="fa fa-pencil"></i>
            </button>
          </div>
          <div class="form__control">
            <textarea class="chat-input" name="chat-input" placeholder="What is your idea..."></textarea>
          </div>
        </form>
      </div>
    </div>

  script(src='/javascripts/application.js')
  script(src='/javascripts/fitgrid.jquery.js')
  script(src='/javascripts/main.js')
  script(src='/javascripts/models.js')
  script(src='/javascripts/collections.js')
  script(src='/javascripts/views.js')
  script(src='/javascripts/router.js')
  script(type='text/javascript').
    window.currentUser = !{JSON.stringify(user)};
    new App.Views.App();
    new App.Router;
    Backbone.history.start();