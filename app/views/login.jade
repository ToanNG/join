extends layout

block content
  div.section-wrapper.login
    div.header
      img.logo(src="images/logo_35.png")
      h1
        | join
    form(id="login-form", class="form", method="POST", action="/login", autocomplete="off")
      div.form__control
        h2 Login
      div.form__control
        if loginErr != ""
          div.error-dialog-box.jelly-show
            | #{loginErr}
        input(name="username", type="text", placeholder="Username")
      div.form__control
        input(name="password", type="password", placeholder="Password")
      div.form__control
        input(class="button large", id="submit-button", type="submit", value="Login")
      div.form__control
        | have not registered? 
        a#switch-signup-link(href="/register") Sign up
      div.form__control OR
      div.form__control
        a.login-fb-button.button.large(href="/auth/facebook")
          div.fb-icon
            i.fa.fa-facebook
          div.fb-text
            | Login with facebook

  script(type="text/javascript").
    $("#login-form").find("input").on("focusin", function(){
      $(".error-dialog-box").removeClass("jelly-show").addClass("jelly-hide");
    });