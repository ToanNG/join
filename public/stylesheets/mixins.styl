prevent-doubleclick()
	-webkit-user-select: none; /* Chrome/Safari */        
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;

border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n

dialog-box(w,h,bg-clr,type,pos)
	position: absolute
	width: w
	height: h
	padding: 15px
	background-color: bg-clr
	&:after
		content: ""
		position: absolute
		top: pos
		if type is 'right'
			right: -20px
			border-top: solid 10px transparent
			border-right: solid 10px transparent
			border-bottom: solid 10px transparent
			border-left: solid 10px bg-clr
		else
			left: -20px
			border-top: solid 10px transparent
			border-right: solid 10px bg-clr
			border-bottom: solid 10px transparent
			border-left: solid 10px transparent

bg-sprite(bg_url,w,h,l,t)
	background-image: url(bg_url)
	width: w
	height: h
	background-position: l t