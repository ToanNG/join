body
	margin: 0
	// font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	font-family: 'Open Sans', sans-serif
	font-size: 14px
	font-weight: 300
	background-color: #2c3338

input
	outline: none
	font-family: 'Open Sans', sans-serif
	font-size: 12px

a
	color: #00B7FF

::-webkit-input-placeholder /* WebKit browsers */
	color: #606468

:-moz-placeholder /* Mozilla Firefox 4 to 18 */
	color: #606468

::-moz-placeholder /* Mozilla Firefox 19+ */
	color: #606468

:-ms-input-placeholder /* Internet Explorer 10+ */
	color: #606468


.wrapper
	width: 100%

.login-form
	width: 250px
	margin: 200px auto 0
	text-align: center
	color: #606468
	.logo
		width: 100%
		height: 105px
	.login-form__control
		margin-top: 10px
		input[type="text"], input[type="password"]
			width: 230px
			padding: 15px 10px
			border: 0
			color: #eee
			background-color: #3b4148
			// box-shadow: inset 0 5px 0 rgba(0,0,0,.05)
			border-radius: 3px
		#submit-button
			width: 250px
#login-form
	position: relative
#signup-form
	display: none

.switch-signup
	margin-top: 10px
.switch-login
	margin-top: 10px
	display: none
#switch-signup-link, #switch-login-link
	color: #eee
	cursor: pointer
	&:hover 
		text-decoration: underline

.error-dialog-box
	position: absolute
	top: 2px
	right: -160px
	dialog-box(110px,38px,#fff,14px)

.button
	position: relative
	border-radius: 3px
	border: 0
	display: inline-block
	padding: 15px 15px
	// font-weight: bold
	color: white
	background-color: #1ead75
	text-transform: uppercase
	// box-shadow: 0px 5px 0px darken(#1ead75, 15%)

	&:active
		box-shadow: inset 0 3px 5px rgba(0,0,0,.5)
		padding: 18px 15px 12px



.show
	-webkit-animation: jelly-show 500ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

.hide
	-webkit-animation: jelly-hide 250ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

@-webkit-keyframes jelly-show
	0%
		-webkit-transform: scale(0.0)
	50%
		-webkit-transform: scale(1.0)
	75%
		-webkit-transform: scale(0.95)
	100%
		-webkit-transform: scale(1.0)

@-webkit-keyframes jelly-hide
	0%
		-webkit-transform: scale(1.0)
	100%
		-webkit-transform: scale(0.0)