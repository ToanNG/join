/*------------------------------------*\
    $SITE
\*------------------------------------*/

body
	margin: 0
	font-family: 'Open Sans', sans-serif
	font-size: 14px
	font-weight: 300
	background-color: #2c3338

input
	outline: none
	font-family: 'Open Sans', sans-serif
	font-size: 0.857142em

a
	color: #00B7FF

::-webkit-input-placeholder /* WebKit browsers */
	color: #606468

:-moz-placeholder /* Mozilla Firefox 4 to 18 */
	color: #606468

::-moz-placeholder /* Mozilla Firefox 19+ */
	color: #606468

:-ms-input-placeholder /* Internet Explorer 10+ */
	color: #606468

.wrapper
	width: 100%

/*------------------------------------*\
    $HOME
\*------------------------------------*/

.home-wrapper
	position: absolute
	top: 25%
	left: 50%
	margin-left: -125px
	width: 250px
	color: #606468
	text-align: center
	.logo
		width: 100%
		height: 105px
	.form__control
		margin-top: 10px
		input[type="text"], input[type="password"]
			width: 230px
			padding: 15px 10px
			color: #eee
			background-color: #3b4148
			border: 0
			border-radius: 3px
		#submit-button
			width: 250px
	#login-form
		position: relative
	#signup-form
		display: none

	.switch-signup
		margin-top: 10px
	.switch-login
		display: none
		margin-top: 10px
	#switch-signup-link, #switch-login-link
		color: #eee
		cursor: pointer
		&:hover 
			text-decoration: underline

	.error-dialog-box
		position: absolute
		top: 2px
		right: -160px
		color: #d12424
		dialog-box(110px,38px,#fff,14px)

	.error-msg
		margin-top: 10px
		color: #d12424

.show
	-webkit-animation: jelly-show 500ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

.hide
	-webkit-animation: jelly-hide 250ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

@-webkit-keyframes jelly-show
	0%
		-webkit-transform: scale(0.0)
	50%
		-webkit-transform: scale(1.0)
	75%
		-webkit-transform: scale(0.95)
	100%
		-webkit-transform: scale(1.0)

@-webkit-keyframes jelly-hide
	0%
		-webkit-transform: scale(1.0)
	100%
		-webkit-transform: scale(0.0)

/*------------------------------------*\
    $401
\*------------------------------------*/

.gandalf
	position: absolute
	top: 50%
	left: 50%
	margin-top: -75px
	margin-left: -75px
	width: 150px
	color: #eee
	.gandalf__author
		text-align: right
		font-size: 0.857142em
	.gandalf__quote
		margin: 12px 0 2px
		text-align: center
	.gandalf__avatar
		margin: 0 auto
		background-image: url('/images/gandalf_avt.jpg')

/*------------------------------------*\
    $SIDEBAR
\*------------------------------------*/

.sidebar
	position: absolute
	top: 0
	bottom: 0
	left: 0
	background-color: gray
	width: 200px

.user-content
	color: #eee
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 200px

.button
	display: inline-block
	position: relative
	padding: 15px 15px
	color: white
	text-transform: uppercase
	background-color: #1ead75
	border: 0
	border-radius: 3px
	&:active
		padding: 18px 15px 12px
		box-shadow: inset 0 3px 5px rgba(0,0,0,.5)

.avatar
	width: 100px
	height: 100px
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	border-radius: 50%
