@import "mixins.styl"

outer-space = #2c3338
bright-gray = #3b4148
shuttle-gray = #606468
gallery = #eee
mercury = #e5e5e5
mountain-meadow = #1ead75
scorpion = #5a5656

/*------------------------------------*\
    $CONTENTS
\*------------------------------------*/
