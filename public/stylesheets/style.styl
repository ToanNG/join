/*------------------------------------*\
    $COMPONENTS
\*------------------------------------*/

.button
	display: block
	position: relative
	color: white
	text-transform: uppercase
	border: 0
	border-radius: 3px
	outline: none
	&:hover
		text-decoration: none
	&:active
		box-shadow: inset 0 3px 5px rgba(0,0,0,.5)

.button.large
	@extend .button
	padding: 15px 0
	&:active
		padding: 18px 0 12px

.button.small
	@extend .button
	padding: 8px 0
	&:active
		padding: 11px 0 5px

.clear
	clear: both

.avatar
	width: 100px
	height: 100px
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	border-radius: 50%
	&.small
		width: 40px
		height: 40px

/*------------------------------------*\
    $ANIMATIONS
\*------------------------------------*/

.fade-in
	-webkit-animation: fade-in 500ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

@-webkit-keyframes fade-in
	0%
		opacity: 0
	100%
		opacity: 1

.show
	-webkit-animation: jelly-show 500ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

.hide
	-webkit-animation: jelly-hide 250ms
	-webkit-animation-iteration-count: 1
	-webkit-animation-fill-mode: forwards
	-webkit-animation-timing-function: ease-out

@-webkit-keyframes jelly-show
	0%
		-webkit-transform: scale(0.0)
	50%
		-webkit-transform: scale(1.0)
	75%
		-webkit-transform: scale(0.95)
	100%
		-webkit-transform: scale(1.0)

@-webkit-keyframes jelly-hide
	0%
		-webkit-transform: scale(1.0)
	100%
		-webkit-transform: scale(0.0)

/*------------------------------------*\
    $FITGRID_STYLES
\*------------------------------------*/

.fitgrid-slot
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	-webkit-transition: all 200ms ease;
	-moz-transition: all 200ms ease;
	-o-transition: all 200ms ease;
	-ms-transition: all 200ms ease;
	transition: all 200ms ease;
	&.slot--13
		right: 50% !important

	&.slot--24
		left: 50% !important

	&.slot--11
		right: 50% !important
		bottom: 50% !important

	&.slot--22
		left: 50% !important
		bottom: 50% !important

	&.slot--33
		right: 50% !important
		top: 50% !important

	&.slot--44
		left: 50% !important
		top: 50% !important